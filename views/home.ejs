<% layout("/layouts/boiler") %>
    <style>
        .btn-primary {
            color: #fff;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn {
            padding: 0.75rem 0.375rem;
            font-size: 2rem;
            font-weight: 400;
            line-height: 1.5;
            color: var(--bs-body-color);
            background-color: transparent;
            border-width: var(--bs-border-width);
            border-color: transparent;
            border-radius: 0;
        }

        .btn-primary:hover {
            color: blueviolet;
            background-color: transparent;
            border-color: transparent;
        }
    </style>

    <body>
        <div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
            <div class="row" style="width:70%">
                <form method="POST" action="/flightInfo" class="needs-validation ">
                    <div class="row mb-3" >
                        <h2><b>Search for Flight</b></h2>
                    </div>
                    <div class="row ">
                        <div class="col-md-6 mb-3">
                            <label for="From" class="form-label"><i
                                    class="fas fa-plane-departure"></i>&nbsp;From</label>
                            <input type="text" name="From" placeholder="City" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="To" class="form-label"><i class="fas fa-plane-arrival"></i>&nbsp;To</label>
                            <input type="text" name="To" placeholder="City" class="form-control" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="DepartureDate" class="form-label"><i class="fas fa-calendar"></i>&nbsp;Departure
                                Date</label>
                            <input type="date" name="DepartureDate" placeholder="Departure Date" class="form-control"
                                required>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="class" class="form-label"><i class="fa-solid fa-dollar-sign"></i>&nbsp;Preferred
                                Class</label>
                            <input type="text" name="class" placeholder="Business / Economy" class="form-control"
                                required>
                        </div>
                    </div>
                    <div style="display: flex; align-items: center; justify-content: center;">
                        <button type="submit" class="btn btn-primary">Search <i
                                class='fas fa-location-arrow'></i></button>
                    </div>
                </form>
            </div>
            </div>
        </div>
    </body>