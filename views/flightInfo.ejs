<% layout("/layouts/boiler") %>
    <style>
        #override-card-header {
            --bs-nav-tabs-border-width: 0;
        }
    .btn-primary {
    --bs-btn-color: #fff;
    --bs-btn-bg: #0d6efd;
    --bs-btn-border-color: #0d6efd;
    --bs-btn-hover-color: #fff;
    --bs-btn-hover-bg: #0b5ed7;
    --bs-btn-hover-border-color: rgba(0,0,0,0.3);
    --bs-btn-focus-shadow-rgb: 49,132,253;
    --bs-btn-active-color: #fff;
    --bs-btn-active-bg: #0a58ca;
    --bs-btn-active-border-color: #0a53be;
    --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
    --bs-btn-disabled-color: #fff;
    --bs-btn-disabled-bg: #0d6efd;
    --bs-btn-disabled-border-color: #0d6efd;
}
.btn {
    --bs-btn-padding-x: 0.75rem;
    --bs-btn-padding-y: 0.375rem;
    --bs-btn-font-family: ;
    --bs-btn-font-size: 1rem;
    --bs-btn-font-weight: 400;
    --bs-btn-line-height: 1.5;
    --bs-btn-color: var(--bs-body-color);
    --bs-btn-bg: transparent;
    --bs-btn-border-width: 1px;
    --bs-btn-border-color: black;
    --bs-btn-border-radius: 0;
    --bs-btn-hover-border:1px solid black;
    --bs-btn-hover-border-color: black;
    --bs-btn-color:black;
    --bs-btn-bg:rgba(0,0,0,0.03);
    --bs-btn-active-bg:blueviolet;
    --bs-btn-hover-bg:blueviolet;
}
.airport{
    color: blueviolet;
}
</style>
    </style>

    <body>
        <% if (noFlightsMessage != '') { %>
            <br><br><br>
            <div class="alert alert-danger">
                <h3><i class="fa-solid fa-xmark"></i>&nbsp;&nbsp;<%= noFlightsMessage %></h3>
                <p>
                    The flight you're looking for does not exist. Try another route or date of departure.

                </p>
            </div>
          <% } %>
        <% for(flight of AirInfo){ %>

            <br><br>
            <div class="card text-center" style="border-radius: 0;">
                <div class="card-header" style="background-color:white;border:none;">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link active"
                                style="border-radius: 0;background-color: transparent;color:blueviolet;">
                                <b><%= flight.airlinername%>&nbsp;&bull;&nbsp;</b><%= flight.name %>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <%= flight.departs %>&nbsp;<i class='fas fa-plane-departure'></i>&nbsp;&#10230;&nbsp;<i class='fas fa-plane-arrival'></i>&nbsp;<%= flight.arrives %>
                    </h1>
                    <p class="card-text">NON-STOP &bull;&nbsp;&#8377;<%= flight.price %>&nbsp;&bull;&nbsp;<%=
                                flight.duration %>&nbsp;&nbsp;<i class="fa fa-plane"></i>&nbsp;&bull;&nbsp;<i class="fa fa-indian-rupee-sign"></i>&nbsp;<%= flight.class %>&nbsp;(AVBL: <%= flight.class_count%>)</p>
                    <p class="card-text" style="text-align: center;">
                        This flight starts from
                        <i class="airport"><%= flight.deptair %> (<%= flight.departs%>)</i> and lands at <i class="airport">
                                <%= flight.arvair %> (<%= flight.arrives%>)</i>
                    </p>
                    <i>Extra Tax (Exclusive of price,&nbsp;Applied for Seat Preference): <i class="fa fa-indian-rupee-sign"></i>&nbsp;<%= flight.tax %></i><br>
                    <br><a href="/flights/<%= flight.flight_id  %>/<%= flight.class %>" class="btn btn-primary">Book a Ticket&nbsp;&nbsp;<i class='far fa-check-circle'></i></a>
                </div>
            </div><br><br>
            <!--div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= flight.departs %></li>
                <li class="list-group-item"><%= flight.departure  %></li>
                <li class="list-group-item"><%= flight.arrives %></li>
                <li class="list-group-item"><%=flight.arrival %></li>
                <li class="list-group-item"><%=flight.airlinername  %></li>
            </ul>
        </div-->
            <% } %>

    </body>