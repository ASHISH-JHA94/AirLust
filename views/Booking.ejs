<% layout("/layouts/boiler") %>

    <body>

        <div class="row">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <ul class="list-group list-group-flush">
                    <% if (bookinginfo && bookinginfo.length > 0) { %>
                        <li class="list-group-item"><%= bookinginfo[0].departs %></li>
                        <li class="list-group-item"><%= bookinginfo[0].arrives %></li>
                        <li class="list-group-item"><%= bookinginfo[0].airlinername %></li>
                        <li class="list-group-item"><%= bookinginfo[0].departure %></li>
                    <% } else { %>
                        <li class="list-group-item">No information available</li>
                    <% } %>
                    
                </ul>
              </div>

            <div class="col-8 offset-2">
                <h2><b>BOOK NOW</b></h2>
                <form method="POST" action="/ticket" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" name="name" placeholder="Enter name of passenger" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" placeholder="Enter email" class="form-control" required> </textarea>
                    </div>

                    <div class="mb-3">
                        <label for="phoneno" class="form-label">Phone Number</label>
                        <input type="number" placeholder="Enter Phone Number" name="phoneno" class="form-control">
                    </div>
                    

                    <div class="mb-3">
                        <label for="dob" class="form-label">Date Of Birth</label>
                        <input type="date" name="dob" placeholder="Enter Date of Birth" class="form-control" required>
                    </div>
                    <input type="hidden" name="flightId" value="<%= flightId %>">
                    <!-- <input type="hidden" name="userId" value="> -->




                    <button  class="btn btn-primary">Save</button>

                </form>
            </div>
        </div>

    </body>

    