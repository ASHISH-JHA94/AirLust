<% layout("/layouts/boiler") %>
    <style>
        .row {
            display: flex;
            justify-content: center;
            flex-direction: column;
            align-items: center;
        }

        .btn-primary {
            --bs-btn-color: #fff;
            --bs-btn-bg: #0d6efd;
            --bs-btn-border-color: #0d6efd;
            --bs-btn-hover-color: #fff;
            --bs-btn-hover-bg: #0b5ed7;
            --bs-btn-hover-border-color: rgba(0, 0, 0, 0.3);
            --bs-btn-focus-shadow-rgb: 49, 132, 253;
            --bs-btn-active-color: #fff;
            --bs-btn-active-bg: #0a58ca;
            --bs-btn-active-border-color: #0a53be;
            --bs-btn-active-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
            --bs-btn-disabled-color: #fff;
            --bs-btn-disabled-bg: #0d6efd;
            --bs-btn-disabled-border-color: #0d6efd;
        }

        .btn {
            --bs-btn-padding-x: 0.75rem;
            --bs-btn-padding-y: 0.375rem;
            --bs-btn-font-family: ;
            --bs-btn-font-size: 1rem;
            --bs-btn-font-weight: 400;
            --bs-btn-line-height: 1.5;
            --bs-btn-color: var(--bs-body-color);
            --bs-btn-bg: transparent;
            --bs-btn-border-width: 1px;
            --bs-btn-border-color: black;
            --bs-btn-border-radius: 0;
            --bs-btn-hover-border: 1px solid black;
            --bs-btn-hover-border-color: black;
            --bs-btn-color: black;
            --bs-btn-bg: rgba(0, 0, 0, 0.03);
            --bs-btn-active-bg: blueviolet;
            --bs-btn-hover-bg: blueviolet;
        }
    </style>

    <body>
        <br><br><br>
        <div class="row">
            <div class="card col-8 text-center override" style="border-radius: 0;">
                <div class="card-header" style="background-color:white;border:none;">
                    <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                            <a class="nav-link active"
                                style="border-radius: 0;background-color: transparent;color:blueviolet;">
                                <b>
                                    <%= flight.airlinername%>&nbsp;&bull;&nbsp;
                                </b>
                                <%= flight.name %>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <h1 class="card-title">
                        <%= flight.departs %>&nbsp;<i class='fas fa-plane-departure'></i>&nbsp;&#10230;&nbsp;<i
                                class='fas fa-plane-arrival'></i>&nbsp;<%= flight.arrives %>
                    </h1>
                    <p class="card-text">NON-STOP &bull;&nbsp;&#8377;<%= flight.price %>&nbsp;&bull;&nbsp;<%=
                                flight.duration %>&nbsp;&nbsp;<i class="fa fa-plane"></i>&nbsp;</p>
                    <p class="card-text" style="text-align: center;">
                        This flight starts from
                        <i class="airport">
                            <%= flight.deptair %> (<%= flight.departs%>)
                        </i> and lands at <i class="airport">
                            <%= flight.arvair %> (<%= flight.arrives%>)
                        </i>
                    </p>
                </div>
            </div><br><br>

            <div class="col-8 offset-0">
                <h2><b>BOOK NOW</b></h2>
                <form method="POST" action="/ticket" class="needs-validation">
                    <div class="mb-3">
                        <label for="fname" class="form-label">First Name</label>
                        <input type="text" name="fname" placeholder="First Name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="lname" class="form-label">Last Name</label>
                        <input type="text" name="lname" placeholder="Last Name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" placeholder="Enter email" class="form-control" required>
                        </textarea>
                    </div>

                    <div class="mb-3">
                        <label for="phoneno" class="form-label">Phone Number</label>
                        <input type="number" placeholder="Enter Phone Number" name="phoneno" class="form-control">
                    </div>


                    <div class="mb-3">
                        <label for="dob" class="form-label">Date Of Birth</label>
                        <input type="date" name="dob" placeholder="Enter Date of Birth" class="form-control" required>
                    </div>
                    <input type="hidden" name="flightId" value="<%= flightId %>">
                    <!-- <input type="hidden" name="userId" value="> -->
                    <center><button type="submit" class="btn btn-primary">Save&nbsp;<i class='fas fa-user-check'></i></button></center>
                </form>
            </div>
        </div>
        <br><br>
    </body>