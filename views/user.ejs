<% layout("/layouts/boiler") %>

<body>
    <div class="row">
        <% for (user of userInfo) {%>
        <div class="col-8 offset-2">
            <h2><b>User and Flight Information</b></h2>
            <ul class="list-group">
                <li class="list-group-item"><b> First Name:</b> <%= user.first_name %></li>
                <li class="list-group-item"><b> Last Name:</b> <%= user.last_name %></li>
                <li class="list-group-item"><b>Email:</b> <%= user.email %></li>
                <li class="list-group-item"><b>Phone Number:</b> <%= user.phone %></li>
                <li class="list-group-item"><b>Date of Birth:</b> <%= user.dob %></li>
                
        </div>
        <% } %>
    </div>
</body>
